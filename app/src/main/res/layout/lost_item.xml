<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="15dp">
        <android.widget.Button
            android:id="@+id/label"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/foundlabel"
            android:text="失物招领"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/lost_card"
            android:layout_width="140dp"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/lost_picture"
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/library"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginBottom="10dp"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/lost_describe"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="丢失物品描述"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/back_mine"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_marginBottom="3dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/img_item_card"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
               >
                <ImageView
                    android:id="@+id/lost_user_head"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/home" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/lost_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:text="用户名"
                android:textColor="#7E7A7A"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>