<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostAndFoundActivity"
    android:background="#66DAD6D6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/back_mine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/color_top"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="14dp"
                android:text="@string/theme_choose"
                android:textColor="#353535"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/type_choose"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">
            <android.widget.Button
                android:id="@+id/lost"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/color_button"
                android:text="失物招领"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <android.widget.Button
                android:id="@+id/find"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_marginStart="172dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/edittext_shape06"
                android:text="寻物启事"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/describe_obj"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">
            <EditText
                android:id="@+id/lost_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:layout_toEndOf="@id/post55"
                android:background="@drawable/edittext_shape01"
                android:hint="物品描述"
                android:textColor="@color/black"
                android:textColorHint="#9E9696"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:id="@+id/photo">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/add_picture"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="250dp"
                    android:src="@drawable/add2" />
                <ImageView
                    android:id="@+id/add_picture2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="250dp"
                    android:src="@drawable/add2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="433dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:id="@+id/people_info">
            <RelativeLayout
                android:id="@+id/post"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:paddingLeft="12dp">
                <ImageView
                    android:id="@+id/post2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/location"/>

                <EditText
                    android:id="@+id/lost_place"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/post2"
                    android:background="@drawable/edittext_shape06"
                    android:hint="丢失/拾到地点"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9E9696"
                    android:textSize="18sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/post3"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:paddingLeft="12dp">
                <ImageView
                    android:id="@+id/post33"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/time"/>

                <EditText
                    android:id="@+id/pick_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/post33"
                    android:background="@drawable/edittext_shape06"
                    android:hint="丢失/拾到时间"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9E9696"
                    android:textSize="18sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/post4"
                android:layout_marginTop="95dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:paddingLeft="12dp">
                <ImageView
                    android:id="@+id/post44"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/connect"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="15dp"
                    android:layout_toEndOf="@id/post44"
                    android:background="@drawable/edittext_shape06"
                    android:hint="联系人"
                    android:textColor="@color/black"
                    android:textColorHint="#9E9696"
                    android:textSize="18sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/post5"
                android:layout_marginTop="140dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:paddingLeft="12dp">
                <ImageView
                    android:id="@+id/post55"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/phone"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="15dp"
                    android:layout_toEndOf="@id/post55"
                    android:background="@drawable/edittext_shape06"
                    android:hint="联系电话"
                    android:textColor="@color/black"
                    android:textColorHint="#9E9696"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <android.widget.Button
            android:id="@+id/lost_submit"
            android:layout_width="329dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="630dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/color_button"
            android:text="发                 布"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>