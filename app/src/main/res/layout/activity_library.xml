<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryActivity"
    android:background="@drawable/background1"
    android:id="@+id/main_background2"
    >
    <RelativeLayout
        android:id="@+id/serach_view2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_shape01"
        android:clickable="true"
        android:layout_marginHorizontal="@android:dimen/app_icon_size"
        >
        <EditText
            android:id="@+id/search_context2"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittext_shape01"
            android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
            android:ems="10"
            android:hint="请输入搜索内容"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:textColorHint="#9921329A" />
        <android.widget.Button
            android:id="@+id/search_button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/search_context2"
            android:background="@drawable/edittext_shape01"
            android:gravity="center"
            android:text="@string/serach"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_view2"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/edittext_shape01"
        android:clickable="true"
        android:layout_marginHorizontal="@android:dimen/app_icon_size">
        <androidx.cardview.widget.CardView
            android:id="@+id/book_card"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"
            android:paddingBottom="15dp">
            <ImageView
                android:id="@+id/book_center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/book2" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/study_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书籍共享"
            android:textColor="#353535"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/movie_center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="110dp"
            android:paddingBottom="15dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/film" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/lost_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影共享"
            android:textColor="#353535"
            android:textSize="14sp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="60dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/music_center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="185dp"
            android:paddingBottom="15dp">
            <ImageView
                android:id="@+id/question_center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/music" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/question_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="60dp"
            android:text="音乐共享"
            android:textColor="#353535"
            android:textSize="14sp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/emotion"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="35dp"
            android:paddingBottom="15dp">
            <ImageView
                android:id="@+id/emotion_center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/code" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/emotion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代码分享"
            android:textColor="#353535"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="140dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/interest"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="110dp"
            android:paddingBottom="15dp">
            <ImageView
                android:id="@+id/interest_center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/file" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/interest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习资料"
            android:textColor="#353535"
            android:textSize="14sp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="140dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/interest2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="185dp"
            android:paddingBottom="15dp">
            <ImageView
                android:id="@+id/interest_center2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/paper" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/interest_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="论文中心"
            android:textColor="#353535"
            android:textSize="14sp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="140dp"
            />
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botton_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"
        tools:ignore="MissingConstraints" />
</RelativeLayout>